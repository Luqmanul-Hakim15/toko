<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:padding="16dp"
        android:background="#F5F5F5"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/consMenu"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginBottom="20dp">

                <EditText
                    android:id="@+id/editSearch"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:hint="Cari barang disini"
                    android:paddingStart="16dp"
                    android:background="@color/grey"
                    android:textColor="#000"
                    android:textColorHint="#A0A0A0"
                    android:layout_toStartOf="@+id/btnCart"
                    android:layout_marginEnd="7dp"/>

                <ImageView
                    android:id="@+id/btnCart"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:padding="6dp"
                    android:src="@drawable/outline_add_shopping_cart_24" />
            </RelativeLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Produk pilihan"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginBottom="12dp"/>

            //card
        </LinearLayout>
    </ScrollView>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/consMenu"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="@color/green"
        app:layout_constraintBottom_toBottomOf="parent">

        <TextView
            android:id="@+id/txtMenuHome"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:drawableTop="@drawable/outline_add_home_24"
            android:padding="15dp"
            android:text="Home"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/txtMenuKeranjang" />

        <TextView
            android:id="@+id/txtMenuKeranjang"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:drawableTop="@drawable/outline_add_shopping_cart_white_24"
            android:padding="15dp"
            android:text="Keranjang"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@+id/txtMenuHome"
            app:layout_constraintEnd_toStartOf="@+id/txtMenuTransaksi" />

        <TextView
            android:id="@+id/txtMenuTransaksi"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:drawableTop="@drawable/outline_format_list_bulleted_24"
            android:padding="15dp"
            android:text="Transaksi"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@+id/txtMenuKeranjang"
            app:layout_constraintEnd_toStartOf="@+id/txtMenuAkun" />

        <TextView
            android:id="@+id/txtMenuAkun"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:drawableTop="@drawable/twotone_group_24"
            android:padding="15dp"
            android:text="Akun"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@+id/txtMenuTransaksi"
            app:layout_constraintEnd_toEndOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>