<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="12dp"
    android:layout_marginBottom="8dp"
    android:background="#FFFFFF">

    <!-- Konten Utama (Produk, Harga, Tombol +/-) -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_toStartOf="@+id/btnHapus"
        android:layout_marginEnd="16dp">

        <ImageView
            android:id="@+id/ivProduk"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="#E0E0E0" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginStart="12dp">

            <TextView
                android:id="@+id/tvNamaProduk"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nama Produk"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="#000" />

            <TextView
                android:id="@+id/tvHargaProduk"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Total Harga Rp 10.000/Kg"
                android:textSize="13sp"
                android:textColor="#D35400"
                android:textStyle="bold"
                android:layout_marginTop="4dp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="8dp"
                android:gravity="center_vertical">

                <Button
                    android:id="@+id/btnKurang"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:text="-"
                    android:textSize="16sp"
                    android:padding="0dp"
                    android:backgroundTint="#E0E0E0"
                    android:textColor="#000000" />

                <TextView
                    android:id="@+id/tvJumlah"
                    android:layout_width="40dp"
                    android:layout_height="wrap_content"
                    android:text="1"
                    android:textAlignment="center"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:layout_marginHorizontal="8dp" />

                <Button
                    android:id="@+id/btnTambah"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:text="+"
                    android:textSize="16sp"
                    android:padding="0dp"
                    android:backgroundTint="#E0E0E0"
                    android:textColor="#000000" />
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

    <!-- ICON TEMPAT SAMPAH -->
    <ImageView
        android:id="@+id/btnHapus"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/ic_list"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:contentDescription="Hapus item" />

</RelativeLayout>
