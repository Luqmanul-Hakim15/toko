<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="12dp"
    android:layout_marginVertical="6dp"
    app:cardCornerRadius="14dp"
    app:cardElevation="3dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp">

        <!-- Gambar Produk -->
        <ImageView
            android:id="@+id/imgProduk"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_launcher_foreground"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

        <!-- Nama Produk -->
        <TextView
            android:id="@+id/txtNama"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Alpukat"
            android:textSize="15sp"
            android:textStyle="bold"
            android:textColor="#000000"
            app:layout_constraintStart_toEndOf="@id/imgProduk"
            app:layout_constraintTop_toTopOf="@id/imgProduk"
            app:layout_constraintEnd_toStartOf="@id/btnMore"
            android:layout_marginStart="12dp" />

        <!-- Harga -->
        <TextView
            android:id="@+id/txtHarga"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rp. 3.000 / kg"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="#E53935"
            app:layout_constraintStart_toStartOf="@id/txtNama"
            app:layout_constraintTop_toBottomOf="@id/txtNama"
            android:layout_marginTop="4dp" />

        <!-- Icon Toko -->
        <ImageView
            android:id="@+id/iconToko"
            android:layout_width="14dp"
            android:layout_height="14dp"
            android:src="@drawable/ic_store"
            android:tint="#9E9E9E"
            app:layout_constraintStart_toStartOf="@id/txtNama"
            app:layout_constraintTop_toBottomOf="@id/txtHarga"
            android:layout_marginTop="6dp" />

        <!-- Nama Toko -->
        <TextView
            android:id="@+id/txtToko"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lemonilo"
            android:textSize="13sp"
            android:textColor="#9E9E9E"
            app:layout_constraintStart_toEndOf="@id/iconToko"
            app:layout_constraintTop_toTopOf="@id/iconToko"
            android:layout_marginStart="6dp" />

        <!-- More (â‹®) -->
        <ImageView
            android:id="@+id/btnMore"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/outline_more_vert_24"
            android:tint="#9E9E9E"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>