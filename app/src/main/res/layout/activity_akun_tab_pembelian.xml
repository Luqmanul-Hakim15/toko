<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".Akun">

    <TextView
        android:id="@+id/tvHeaderTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp"
        android:text="Akun"
        android:textColor="#000000"
        android:textSize="16sp"
        android:textStyle="bold" />

    <LinearLayout
        android:id="@+id/bottomNavContainer"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_alignParentBottom="true"
        android:background="#F39C12"
        android:orientation="horizontal"
        android:weightSum="5">

        <LinearLayout android:id="@+id/btnNavHome" android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1" android:gravity="center" android:orientation="vertical">
            <ImageView android:layout_width="24dp" android:layout_height="24dp" android:src="@drawable/ic_home" app:tint="#FFFFFF"/>
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Home" android:textColor="#FFFFFF" android:textSize="10sp"/>
        </LinearLayout>

        <LinearLayout android:id="@+id/btnNavTransaksi" android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1" android:gravity="center" android:orientation="vertical">
            <ImageView android:layout_width="24dp" android:layout_height="24dp" android:src="@drawable/ic_list" app:tint="#FFFFFF"/>
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Transaksi" android:textColor="#FFFFFF" android:textSize="10sp"/>
        </LinearLayout>

        <LinearLayout android:id="@+id/btnNavEtalase" android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1" android:gravity="center" android:orientation="vertical">
            <ImageView android:layout_width="24dp" android:layout_height="24dp" android:src="@drawable/ic_store" app:tint="#FFFFFF"/>
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Etalase" android:textColor="#FFFFFF" android:textSize="10sp"/>
        </LinearLayout>

        <LinearLayout android:id="@+id/btnNavVerifikasi" android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1" android:gravity="center" android:orientation="vertical">
            <ImageView android:layout_width="24dp" android:layout_height="24dp" android:src="@drawable/ic_edit" app:tint="#FFFFFF"/>
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Verifikasi" android:textColor="#FFFFFF" android:textSize="10sp"/>
        </LinearLayout>

        <LinearLayout android:id="@+id/btnNavAkun" android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1" android:gravity="center" android:orientation="vertical" android:background="#D35400">
            <ImageView android:layout_width="24dp" android:layout_height="24dp" android:src="@drawable/ic_person" app:tint="#FFFFFF"/>
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Akun" android:textColor="#FFFFFF" android:textSize="10sp" android:textStyle="bold"/>
        </LinearLayout>
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/tvHeaderTitle"
        android:layout_above="@id/bottomNavContainer"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="20dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingVertical="15dp">
                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true">
                    <com.google.android.material.imageview.ShapeableImageView
                        android:id="@+id/imgProfile"
                        android:layout_width="85dp"
                        android:layout_height="85dp"
                        android:src="@drawable/ic_user_placeholder"
                        app:shapeAppearanceOverlay="@style/CircleImage"
                        app:strokeColor="#EEEEEE"
                        app:strokeWidth="1dp" />

                    <com.google.android.material.imageview.ShapeableImageView
                        android:id="@+id/btnUploadImage"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:layout_gravity="bottom|end"
                        android:background="#D35400"
                        android:padding="6dp"
                        android:src="@drawable/ic_camera"
                        app:shapeAppearanceOverlay="@style/CircleImage"
                        app:strokeColor="#FFFFFF"
                        app:strokeWidth="2dp" />
                </FrameLayout>
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingHorizontal="45dp"
                android:orientation="horizontal">
                <Button
                    android:layout_width="0dp"
                    android:layout_height="36dp"
                    android:layout_weight="1"
                    android:text="Pembelian"
                    android:backgroundTint="#F39C12"
                    android:textSize="11sp"
                    android:textAllCaps="false"
                    android:layout_marginEnd="10dp" />
                <Button
                    style="@style/Widget.MaterialComponents.Button.TextButton"
                    android:layout_width="0dp"
                    android:layout_height="36dp"
                    android:layout_weight="1"
                    android:text="Penjualan"
                    android:textColor="#F39C12"
                    android:textSize="11sp"
                    android:textAllCaps="false"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#D3D3D3"
                android:orientation="vertical"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="25dp"
                android:padding="1dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="38dp"
                    android:background="#CCCCCC"
                    android:paddingHorizontal="10dp"
                    android:gravity="center_vertical">
                    <ImageView android:layout_width="18dp" android:layout_height="18dp" android:src="@drawable/ic_shopping_bag" app:tint="#000000" />
                    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                        android:layout_marginStart="8dp" android:text="Rekap Pembelian"
                        android:textStyle="bold" android:textSize="12sp" android:textColor="#000000" />
                </LinearLayout>

                <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="horizontal">
                    <LinearLayout android:layout_width="0dp" android:layout_height="100dp" android:layout_weight="1" android:gravity="center" android:background="#FFFFFF" android:orientation="vertical" android:layout_marginEnd="1dp">
                        <ImageView android:layout_width="32dp" android:layout_height="32dp" android:src="@drawable/ic_wallet_brown" />
                        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Belum dibayar" android:textSize="10sp" android:textColor="#8B5E3C" android:layout_marginTop="8dp"/>
                    </LinearLayout>
                    <LinearLayout android:layout_width="0dp" android:layout_height="100dp" android:layout_weight="1" android:gravity="center" android:background="#FFFFFF" android:orientation="vertical" android:layout_marginEnd="1dp">
                        <ImageView android:layout_width="32dp" android:layout_height="32dp" android:src="@drawable/ic_box_brown" />
                        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Dikemas" android:textSize="10sp" android:textColor="#8B5E3C" android:layout_marginTop="8dp"/>
                    </LinearLayout>
                    <LinearLayout android:layout_width="0dp" android:layout_height="100dp" android:layout_weight="1" android:gravity="center" android:background="#FFFFFF" android:orientation="vertical">
                        <ImageView android:layout_width="32dp" android:layout_height="32dp" android:src="@drawable/ic_truck_brown" />
                        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Dikirim" android:textSize="10sp" android:textColor="#8B5E3C" android:layout_marginTop="8dp"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="20dp"
                android:background="#D3D3D3"
                android:orientation="vertical"
                android:padding="1dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="38dp"
                    android:background="#CCCCCC"
                    android:gravity="center_vertical"
                    android:paddingHorizontal="10dp">

                    <ImageView
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:src="@drawable/ic_id_card"
                        app:tint="#000000" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:text="Pengaturan Akun"
                        android:textColor="#000000"
                        android:textSize="12sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="horizontal">
                    <LinearLayout android:layout_width="0dp" android:layout_height="100dp" android:layout_marginEnd="1dp" android:layout_marginBottom="1dp" android:layout_weight="1" android:background="#FFFFFF" android:gravity="center" android:orientation="vertical">
                        <ImageView android:layout_width="32dp" android:layout_height="32dp" android:src="@drawable/ic_profile_brown" />
                        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="8dp" android:text="Perbaharui Profil" android:textColor="#8B5E3C" android:textSize="10sp" />
                    </LinearLayout>
                    <LinearLayout android:layout_width="0dp" android:layout_height="100dp" android:layout_marginBottom="1dp" android:layout_weight="1" android:background="#FFFFFF" android:gravity="center" android:orientation="vertical">
                        <ImageView android:layout_width="32dp" android:layout_height="32dp" android:src="@drawable/ic_lock_brown" />
                        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="8dp" android:text="Ganti Kata Sandi" android:textColor="#8B5E3C" android:textSize="10sp" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="horizontal">
                    <LinearLayout android:layout_width="0dp" android:layout_height="100dp" android:layout_marginEnd="1dp" android:layout_weight="1" android:background="#FFFFFF" android:gravity="center" android:orientation="vertical">
                        <ImageView android:layout_width="32dp" android:layout_height="32dp" android:src="@drawable/ic_payment_brown" />
                        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="8dp" android:text="Metode Pembayaran" android:textColor="#8B5E3C" android:textSize="10sp" />
                    </LinearLayout>
                    <LinearLayout android:layout_width="0dp" android:layout_height="100dp" android:layout_weight="1" android:background="#FFFFFF" android:gravity="center" android:orientation="vertical">
                        <ImageView android:layout_width="32dp" android:layout_height="32dp" android:src="@drawable/ic_address_brown" />
                        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="8dp" android:text="Alamat Pengiriman" android:textColor="#8B5E3C" android:textSize="10sp" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</RelativeLayout>